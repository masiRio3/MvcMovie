@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Registro</a>
</p>
<form asp-controller="Movies" asp-action="Index" method="get">
    <p>
        <strong>Genero:</strong>
        <select asp-for="MovieGenre" asp-items="Model.Genres">
           <option value="">All</option>
        </select>

        <strong>Titulo:</strong>
        <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />

    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].FechaLanzamiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Rating)
            </th>
            <th></th>

            <th>
                @Html.DisplayNameFor(model => model.Movies[0].Precio)
            </th>
          

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies) {
            <tr>
                <td>
                   @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaLanzamiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero)
                </td>
                <td>
                     @Html.DisplayFor(modelItem => item.Rating)
                <td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                <td>
                
              
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </div>
                </td>
            </tr>

       
        }
    </tbody>
</table>

